{
    "compilerOptions": {
        "target": "es5",
        "outDir": "build",
        "rootDir": "src",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "listFiles": false,
        "traceResolution": false,
        "pretty": true,
        "lib": ["es6", "es5", "es2015"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/**"],
    "compileOnSave": false
}
